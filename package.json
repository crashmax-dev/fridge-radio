{
  "name": "fridge-radio",
  "version": "1.0.0",
  "description": "fridge-radio template",
  "type": "module",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:radio": "tsc-watch --compiler typescript/bin/tsc -p tsconfig.build.json --onSuccess \"node -r tsconfig-paths/register --inspect dist/index.js\"",
    "dev:web": "cd web && npm run watch",
    "build": "npm-run-all build:*",
    "build:radio": "tsc -p tsconfig.build.json",
    "build:web": "cd web && npm run build",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --fix --ext ts .",
    "prebuild": "del-cli dist",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@crashmax/eslint-config": "^1.1.0",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/node": "^17.0.21",
    "del-cli": "^4.0.1",
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.2",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "@fridgefm/radio-core": "^3.1.2",
    "@tinyhttp/app": "^2.0.19",
    "sirv": "^2.0.2"
  }
}
